# Terraform S3 Backend Configuration
# This file provides an example of backend configuration for Incus storage buckets
#
# Copy this file to backend.hcl and fill in your actual values:
#   cp backend.hcl.example backend.hcl
#
# Note: backend.hcl is gitignored to protect credentials

# Incus storage bucket name
bucket = "atlas-terraform-state"

# S3 credentials generated from Incus
access_key = "<YOUR_ACCESS_KEY>"
secret_key = "<YOUR_SECRET_KEY>"

# Incus storage buckets endpoint (Terraform 1.6+ syntax)
# Use localhost if Terraform runs on the same host as Incus
endpoints = {
  s3 = "http://localhost:8555"
}

# Or use the Incus host IP if running remotely:
# endpoints = {
#   s3 = "http://192.168.1.100:8555"
# }
